{
  "manifest_version": 2,
  "name": "my stats",
  "description": "This extension is used to monitor visiting time of a website. ",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Click here!"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab",
    "notifications",
    "tabs"
  ]
}