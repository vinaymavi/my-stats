{
  "manifest_version": 2,
  "name": "My Stats",
  "description": "This extension is used to monitor visiting time of a website. ",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "images/icon3.png",
    "default_title": "Click here!"
  },
  "background": {
    "scripts": [
      "js/lib/jquery.js",
      "js/lib/moment.js",
      "js/entity/website.js",
      "js/entity/domain.js",
      "js/db.js",
      "js/http.js",
      "js/my_stats.js",
      "js/notification.js",
      "js/tabs.js",
      "js/window.js"
    ]
  },
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "storage",
    "https://*/",
    "http://*/"
  ],
  "icons": {
    "16": "images/icon3.png",
    "48": "images/icon3.png",
    "128": "images/icon3.png"
  }
}